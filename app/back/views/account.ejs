<%- include('partials/header') %>

<section class="section">

    <h3><%= homeName %></h3>

    <div class="account">

        <ul>
            <li><strong>Id : </strong><%= account.id %></li>
            <li><strong>First name : </strong><%= account.first_name %></li>
            <li><strong>Last name : </strong><%= account.last_name %></li>
            <li><strong>Email : </strong><%= account.email %></li>
            <li><strong>Role : </strong><%= account.role %></li>
            <li><strong>Created at : </strong><%= account.created_at %></li>
            <li><strong>Updated at : </strong><%= account.updated_at %></li>
        </ul>
        <div class="update-delete">
            <a class="icones-account" href="/admin/account/update/<%= account.id %>"><img src="/picture/icones/2.png" alt="Update"></a>
            <form action="/admin/account/delete/<%= account.id %>" method="post">
            <input class="icones-account" type="image" src="/picture/icones/1.png"></form>
        </div>

    </div>

    <% if(account.message) { %>

        <div class="message">
            <h3>Message </h3>
            <table>
                <thead>
                    <tr class="top">
                        <th>Id</th>
                        <th>Label</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="bottom">
                    
                    <% for(const message of account.message) { %>
                        <tr><td><%= message.id %></td><td><a href="/admin/message/<%= message.id %>"><%= message.label %></a></td><td><%= message.created_at %></td><td><%= message.updated_at %></td><td><form action="/admin/account/<%= account.id %>/message/<%= message.id %>" method="post"><input class="icones" type="image" src="/picture/icones/1.png"></form></td></tr>
                    <% } %>

                </tbody>
            </table>
        </div>

    <% } %>

    <% if(account.ingredient) { %>

        <div class="ingredient">
            <h3>Ingredient</h3>
            <table>
                <thead>
                    <tr class="top">
                        <th>Id</th>
                        <th>Picture</th>
                        <th>Label</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="bottom">

                    <% if(account.ingredient) { %>
                        <% for(const ingredient of account.ingredient) { %>
                            <tr><td><%= ingredient.id %></td><td><img class="picture-ingredient" src="http://kevin-lienard-server.eddi.cloud/public/picture/ingredient/<%= ingredient.picture %>" alt="<%= ingredient.picture %>"></td><td><a href="/admin/ingredient/<%= ingredient.id %>"><%= ingredient.label %></a></td><td><%= ingredient.created_at %></td><td><%= ingredient.updated_at %></td><td><form action="/admin/account/<%= account.id %>/ingredient/<%= ingredient.id %>" method="post"><input class="icones" type="image" src="/picture/icones/1.png"></form></td></tr>
                        <% } %>
                    <% } %>

                </tbody>
            </table>
        </div>

    <% } %>

</section>

<%- include('partials/footer') %>