<%- include('../partials/header'); %>

    <main class="content">
        <h1>Création d'une nouvelle catégorie</h1>
        <form id="formCategory" action="/admin/category/create" method="POST">
            <% if(locals.event) {%>
                <div class="message is-danger">
                    <p class="message-body"><%= event.message %></p>
                </div>
            <% } %>
            <div class="field">
                <label class="label">Nom</label>
                <div class="control">
                    <input class="input" name="label" type="text" placeholder="Nom de la catégorie">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Submit</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                </div>
            </div>
        </form>
  
<%- include('../partials/footer') %>