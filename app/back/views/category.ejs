          <% for (let index = 0; index < list.length; index++) { %>
            <% const itemList = list[index] %>
            <tr>
              <% for (const prop in itemList) { %>
                <% if (Array.isArray(itemList[prop])) { %>
                  <td>
                    <div class="dropdown">
                      <button class="dropbtn"><%= prop %></button>
                      <div class="dropdown-content">
                        <% for (let i = 0; i < itemList[prop].length; i++) { %>
                          <% const obj = itemList[prop][i] %>
                          <% for (const objProp in obj) { %>
                            <a href="#"><%= obj[objProp] %></a>
                          <% } %>
                          <% if (i < itemList[prop].length - 1) { %>
                            <hr>
                          <% } %>
                        <% } %>
                      </div>
                    </div>
                  </td>
                <% } else { %>
                  <td><%= itemList[prop] %></td>
