<%- include('partials/header') %>

<section class="section">

    <h3><%= homeName %></h3>

    <div class="add">
        <a class="add-icone" href="/admin/register"><img src="/picture/icones/3.png" alt="Add"></a>
        <span><a href="/admin/register">Add  <%= homeName.toLowerCase() %></a></span>
    </div>

    <table>
        <thead>
            <tr class="top">
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="bottom">
            <% for(const account of accounts) { %>
                <tr><td><%= account.id %></td><td><a href="/admin/account/<%= account.id %>"><%= account.first_name + ' ' + account.last_name%></a></td><td><%= account.email %></td><td><%= account.created_at %></td><td><%= account.updated_at %></td><td><a class="icones" href="/admin/account/update/<%= account.id %>"><img src="/picture/icones/2.png" alt="Update"></a></td><td><form action="/admin/account/delete/<%= account.id %>" method="post"><input class="icones" type="image" src="/picture/icones/1.png"></form></td></tr>
            <% } %>
        </tbody>
    </table>

</section>

<%- include('partials/footer') %>