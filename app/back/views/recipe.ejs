<%- include('partials/header') %>

<section class="section">

    <h3><%= homeName %></h3>

    <div class="recipe">

        <img class="picture-recipe" src="http://localhost:3000/public/picture/recipe/<%= recipe.picture %>" alt="<%= recipe.picture %>">

        <div class="recipe-detail">
            <ul>
                <li><strong>Id : </strong><%= recipe.id %></li>
                <li><strong>Label : </strong><%= recipe.label %></li>
                <li><strong>Rate : </strong><%= recipe.rate %></li>
                <li><strong>Difficulty : </strong><%= recipe.difficulty %></li>
                <li><strong>Time : </strong><%= recipe.time %></li>
                <li><strong>Created at : </strong><%= recipe.created_at %></li>
                <li><strong>Updated at : </strong><%= recipe.updated_at %></li>
            </ul>
            <div class="update-delete">
                <a class="icones-recipe" href="#"><img src="/picture/icones/2.png" alt="Update"></a>
                <form action="/admin/recipe/delete/<%= recipe.id %>" method="post">
                <input class="icones-recipe" type="image" src="/picture/icones/1.png"></form>
            </div>
        </div>

    </div>

    <% if(recipe.ingredient) { %>

        <div class="ingredient">
            <h3>Ingredient</h3>
            <table>
                <thead>
                    <tr class="top">
                        <th>Id</th>
                        <th>Picture</th>
                        <th>Label</th>
                        <th>Quantity</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="bottom">

                    <% for(const ingredient of recipe.ingredient) { %>
                        <tr><td><%= ingredient.id %></td><td><img class="picture-ingredient" src="http://localhost:3000/public/picture/ingredient/<%= ingredient.picture %>" alt="<%= ingredient.picture %>"></td><td><a href="/admin/ingredient/<%= ingredient.id %>"><%= ingredient.label %></a></td><td><%= ingredient.quantity %></td><td><%= ingredient.created_at %></td><td><%= ingredient.updated_at %></td><td><form action="/admin/recipe/<%= recipe.id %>/ingredient/<%= ingredient.id %>" method="post"><input class="icones" type="image" src="/picture/icones/1.png"></form></td></tr>
                    <% } %>

                </tbody>
            </table>
        </div>

    <% } %>

    <% if(recipe.step) { %>

        <div class="step">
            <h3>Step</h3>
            <table>
                <thead>
                    <tr class="top">
                        <th>Id</th>
                        <th>Content</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="bottom">

                    <% for(const step of recipe.step) { %>
                        <tr><td><%= step.id %></td><td class="content"><%= step.content %></td><td><%= step.created_at %></td><td><%= step.updated_at %></td><td><form action="/admin/recipe/<%= recipe.id %>/step/<%= step.id %>" method="post"><input class="icones" type="image" src="/picture/icones/1.png"></form></td></tr>
                    <% } %>

                </tbody>
            </table>
        </div>

    <% } %>

    <% if(recipe.tag) { %>

        <div class="tag">
            <h3>Tag</h3>
            <table>
                <thead>
                    <tr class="top">
                        <th>Id</th>
                        <th>Label</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="bottom">

                    <% for(const tag of recipe.tag) { %>
                        <tr><td><%= tag.id %></td><td><a href="/admin/tag/<%= tag.id %>"><%= tag.label %></a></td><td><%= tag.created_at %></td><td><%= tag.updated_at %></td><td><form action="/admin/recipe/<%= recipe.id %>/tag/<%= tag.id %>" method="post"><input class="icones" type="image" src="/picture/icones/1.png"></form></td></tr>
                    <% } %>

                </tbody>
            </table>
        </div>

    <% } %>

</section>

<%- include('partials/footer') %>